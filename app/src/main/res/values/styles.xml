<resources>

    <style name="TextAppearance.Template.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextAppearance.Template.H1" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Widget.Template" parent="@android:style/Widget" />

    <style name="Widget.Template.AppBar" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="android:elevation">@dimen/card_elevation_default</item>
    </style>

    <style name="Widget.Template.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
        <item name="titleTextAppearance">@style/TextAppearance.Template.ToolbarTitle</item>
    </style>

</resources>
