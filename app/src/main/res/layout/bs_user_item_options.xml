<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/margin_padding_size_medium"
        android:foreground="?selectableItemBackground"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_padding_size_medium"
        android:text="@string/title_edit"
        app:drawableStartCompat="@drawable/ic_edit_24"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/margin_padding_size_medium"
        android:foreground="?selectableItemBackground"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_padding_size_medium"
        android:text="@string/title_delete"
        app:drawableStartCompat="@drawable/ic_delete_24"
        app:layout_constraintTop_toBottomOf="@id/tvEdit" />

</androidx.constraintlayout.widget.ConstraintLayout>
